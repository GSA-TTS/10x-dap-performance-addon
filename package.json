{
  "name": "dap-performance-addon",
  "description": "Webcomponent dap-performance-addon following open-wc recommendations",
  "license": "MIT",
  "author": "dap-performance-addon",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/dap-performance-addon.cjs",
  "module": "dist/dap-performance-addon.js",
  "exports": {
    "./dap-performance-addon.cjs": "./dist/dap-performance-addon.cjs",
    "./dap-performance-addon.global.js": "./dist/dap-performance-addon.global.js",
    "./dap-performance-addon.js": "./dist/dap-performance-addon.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsup && concurrently -k -r \"tsup --watch\" \"web-dev-server\"",
    "build": "tsup",
    "prepublish": "tsup && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepare": "husky",
    "test": "tsup && wtr --coverage",
    "test:watch": "tsup && concurrently -k -r \"tsup --watch\" \"wtr --watch\""
  },
  "dependencies": {
    "lit": "^3.1.4",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.7",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.18.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tslib": "^2.6.3",
    "tsup": "^8.3.5",
    "typescript": "^5.5.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
